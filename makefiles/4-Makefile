CC = gcc
SRC = main.c school.c
OBJ = $(SRC: c=.o)
NAME = school
RM = rm _ *~
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
        $(RM) $(NAME)

oclean:
       	$(RM) $(OBJ) $(NAME)

fclean:
        $(RM) $(NAME)
        $(RM) $(OBJ)

re:
        $(RM) -f $(OBJ) $(NAME)
}
